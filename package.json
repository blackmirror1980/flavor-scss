{
  "name": "flavor-scss",
  "version": "0.2.4",
  "description": "Flavor SCSS, bourbon.io based mixins & helpers",
  "main": "scss/flavor.scss",
  "scripts": {
    "git-prepare": "changelog && echo 'CHANGELOD.md file built' && npm run readme && npm run docs",
    "docs": "sassdoc scss -d docs && echo 'docs built'",
    "readme": "pkg-2-readme package.json > README.md -t \"./pkg-2-readme.template.md\" && echo 'README.md file built'",
    "test": "sass-lint -c scss-lint.yml -v -q"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blackmirror1980/flavor-scss.git"
  },
  "keywords": [
    "flavor",
    "scss",
    "bourbon",
    "mixins",
    "functions",
    "helpers"
  ],
  "author": "Black Mirror",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blackmirror1980/flavor-scss/issues"
  },
  "homepage": "https://blackmirror1980.github.io/flavor-scss",
  "documentation": "https://blackmirror1980.github.io/flavor-scss/index.html",
  "devDependencies": {
    "sass-lint": "^1.12.1",
    "sassdoc": "^2.5.0"
  },
  "dependencies": {
    "bourbon": "^4.3.4"
  }
}